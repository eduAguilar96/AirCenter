<tr class="nested-fields">
  <td>
    <%= link_to_remove_association "remove", f, class: 'btn btn-primary btn-xs' %>
  </td>
  <td>
    <%=
      f.input :name, label: false, :input_html => {:size => 10}
    %>
  </td>
  <td>
    <%=
      f.input :last_name_p, label: false, :input_html => {:size => 13}
    %>
  </td>
  <td>
    <%=
      f.input :last_name_m, label: false, :input_html => {:size => 13}
    %>
  </td>
  <td>
    <%=
      f.input :mail, label: false, :input_html => {:size => 10}
    %>
  </td>
  <td>
    <%=
      f.input :telephone, label: false, :input_html => {:size => 10}
    %>
  </td>
  <td>
    <%=
      f.date_field :birth_date, label: false, :input_html => {:size => 10}
    %>
  </td>
  <td>
    <%=
      f.input :passport, label: false, :input_html => {:size => 10}
    %>
  </td>
</tr>
